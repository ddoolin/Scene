<div id="create_event_modal" class="modal hide fade">
    <div class="modal-header">New Event
        <button class="close" data-dismiss="modal">x</button>
    </div>
    <form id="new_event_form" class="form-horizontal">
        <fieldset name="event-creation">
            <div class="modal-content">
                <div class="control-group">
                    <label class="name control-label">Event Name</label>
                    <div class="controls">
                        <input type="text" id="event_name" class="event-name" required="required" title="event-name" placeholder="e.g. AngelHack Seoul 2013" />
                        <p class="event-name-comment text-error"></p>
                </div>
                <div class="control-group">
                    <label class="description control-label">Event Description</label>
                    <div class="controls">
                        <input type="text" id="event_description" class="event-description" required="required" title="event-description" placeholder="e.g. 24-hours of hacking goodness for cool prizes!" />
                        <p class="event-description-comment text-error"></p>
                </div>
                <div class="location-control-group control-group">
                    <label class="location control-label">Where</label>
                    <div class="controls">
                        <input type="text" required="required" id="event_location" class="event-location" title="event-location" placeholder="서초구 잠원동 새롬빌딩" />
                        <div class="button-container">
                            <span class="or-divider">- or -
                            <button id="find_location" class="btn">Find on map</button>
                        </div>
                        <p class="event-location-comment text-error"></p>
                    </div>
                </div>
                <div class="time-control-group control-group">
                    <label class="time control-label">When</label>
                    <div class="controls">
                        <div class="from">
                            <div class="inputs">
                                <input id="from_date" class="from-date" type="text" />
                                <input id="from_time" class="from-time" type="text" />
                                <% include hour-select %>
                            </div>
                        </div>
                        <div class="to">
                            <span class="to-label">to</span>
                            <div class="inputs">
                                <input id="to_date" class="to-date" type="text" />
                                <input id="to_time" class="to-time" type="text" />
                                <% include hour-select %>
                            </div>
                        </div>
                        <p class="event-time-comment text-error"></p>
                    </div>
                </div>
                <div class="event-alert alert alert-success hide fade in">
                    <button class="close">&times;</button>
                    <p class="event-submit-comment"></p>
                </div>
            </div>
            <div class="modal-footer">
                <input id="#event_submit" class="event-submit btn btn-primary" type="submit" value="Create Event!" />
                <button id="#clear_form" class="clear-form btn">Clear</button>
            </div>
        </fieldset>
    </form>
</div>