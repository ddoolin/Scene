<div class="tabs">
    <span class="attending-tab active">My Events</span>
    <span class="spots-tab">My Spots</span>
</div>
<div class="events">
    <% for (var i = 0; i < user.attended_events.length; i++) { %>
        <div class="event">
            <div class="event-name"><%= user.attended_events[i].name %></div>
            <div class="event-duration"><%= user.attended_events[i].duration.starttime %> ~ <%= user.attended_events[i].duration.endttime %></div>
            <div class="event-location"><%= user.attended_events[i].address %></div>
        </div>
    <% } %>
</div>